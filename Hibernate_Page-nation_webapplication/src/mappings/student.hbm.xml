<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
     <class name="classes.Student" table="Student_details">
     <id name="stud_id" column="student_id">
         <generator class="increment" />
         </id>
     <property name="stud_name" column="student_name" />
     <property name="stud_mail" column="student_mail" />
     <property name="stud_marks" column="student_marks"/>
     </class>
</hibernate-mapping>