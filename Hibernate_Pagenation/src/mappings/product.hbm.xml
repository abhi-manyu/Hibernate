<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
     <class name="classes.Product" table="Product_details">
     <id name="prdct_id" column="product_id">
         <generator class="increment" />
         </id>
     <property name="prdct_name" column="product_name" />
     <property name="prdct_cost" column="cost_of_product" />
     </class>
</hibernate-mapping>